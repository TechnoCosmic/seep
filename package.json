{
    "name": "seep",
    "displayName": "Seep",
    "description": "Modest C++ Toolbox",
    "author": "Dirk Mahoney",
    "publisher": "tcri",
    "version": "0.0.5",
    "engines": {
        "vscode": "^1.77.0"
    },
    "categories": [
        "Programming Languages",
        "Other"
    ],
    "keywords": [
        "refactor",
        "c++",
        "edit"
    ],
    "galleryBanner": {
        "color": "#040404",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/technocosmic/seep.git"
    },
    "activationEvents": [
        "onLanguage:cpp"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "Seep",
            "properties": {
                "seep.snippets": {
                    "type": "array",
                    "description": "The snippets that will show in the refactoring list"
                }
            }
        },
        "commands": [
            {
                "command": "seep.clearLine",
                "title": "Clear Line",
                "category": "Seep"
            },
            {
                "command": "seep.showRefactorList",
                "title": "Show Refactor List",
                "category": "Seep"
            }
        ],
        "keybindings": [
            {
              "command": "seep.showRefactorList",
              "key": "ctrl+shift+r",
              "when": "editorTextFocus"
            },
            {
              "command": "seep.clearLine",
              "key": "ctrl+shift+backspace",
              "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint"
    },
    "devDependencies": {
        "@types/vscode": "^1.77.0",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^5.56.0",
        "@typescript-eslint/parser": "^5.56.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^4.9.5",
        "@vscode/test-electron": "^2.3.0"
    }
}
