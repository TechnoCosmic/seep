{
    "name": "seep",
    "displayName": "Seep",
    "description": "Modest C++ Toolbox",
    "author": "Dirk Mahoney",
    "publisher": "tcri",
    "version": "0.2.0",
    "engines": {
        "vscode": "^1.77.0"
    },
    "categories": [
        "Programming Languages",
        "Other"
    ],
    "keywords": [
        "refactor",
        "c++",
        "edit"
    ],
    "galleryBanner": {
        "color": "#040404",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/technocosmic/seep.git"
    },
    "activationEvents": [
        "onLanguage:cpp",
        "onLanguage:javascript",
        "onLanguage:typescript"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "Seep",
            "properties": {
                "seep.keywords": {
                    "type": "array",
                    "description": "Keywords or short code clips to offer as inline suggestions"
                },
                "seep.snippets": {
                    "type": "array",
                    "description": "The snippets that will show in the refactoring list"
                },
                "seep.sequences": {
                    "type": "array",
                    "description": "A list of command sequences. These are VSCode command IDs that can be strung together like macros"
                }
            }
        },
        "commands": [
            {
                "command": "seep.makeLocal",
                "title": "Convert Selection to Local",
                "category": "Seep"
            },
            {
                "command": "seep.toDec",
                "title": "Convert Selection to Decimal",
                "category": "Seep"
            },
            {
                "command": "seep.toHex",
                "title": "Convert Selection to Hexadecimal",
                "category": "Seep"
            },
            {
                "command": "seep.toBin",
                "title": "Convert Selection to Binary",
                "category": "Seep"
            },
            {
                "command": "seep.clearLine",
                "title": "Clear Line",
                "category": "Seep"
            },
            {
                "command": "seep.showRefactorList",
                "title": "Show Refactor List",
                "category": "Seep"
            },
            {
                "command": "seep.runCommand",
                "title": "Run Command by ID",
                "category": "Seep"
            },
            {
                "command": "seep.runSequence",
                "title": "Run Command Sequence",
                "category": "Seep"
            }
        ],
        "keybindings": [
            {
              "command": "seep.showRefactorList",
              "key": "ctrl+shift+r",
              "when": "editorTextFocus"
            },
            {
              "command": "seep.clearLine",
              "key": "ctrl+shift+backspace",
              "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint"
    },
    "devDependencies": {
        "@types/vscode": "^1.77.0",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^5.56.0",
        "@typescript-eslint/parser": "^5.56.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^4.9.5",
        "@vscode/test-electron": "^2.3.0"
    }
}
